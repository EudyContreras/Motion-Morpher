<?xml version="1.0" encoding="utf-8"?>
<com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:translationZ="6dp"
        android:backgroundTint="@color/white"
        app:cl_shapeType="RECTANGULAR"
        app:cl_radius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7">

    <ImageView
            android:tag="demo2Image"
            android:id="@+id/demo_2_image"
            android:src="@drawable/demo_2_image"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/demo_2_header"
            android:ellipsize="marquee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Metamorphosis"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@color/overlay_dark"
            app:layout_constraintBottom_toBottomOf="@id/demo_2_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/demo_2_image">

        <View
                android:id="@+id/demo_2_favorite"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:backgroundTint="@color/icon_light"
                android:background="@drawable/ic_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <View
                android:id="@+id/demo_2_book"
                android:layout_weight="1.4"
                android:layout_margin="8dp"
                android:backgroundTint="@color/icon_light"
                android:background="@drawable/ic_bookmark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/demo_2_share"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:backgroundTint="@color/icon_light"
                android:background="@drawable/ic_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout>