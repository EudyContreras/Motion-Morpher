<?xml version="1.0" encoding="utf-8"?>
<com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:translationZ="6dp"
        android:backgroundTint="@color/white"
        android:tag="details"
        app:cl_shapeType="RECTANGULAR"
        app:cl_clipCorners="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

    <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ImageLayout
            android:tag="demo2Image"
            android:id="@+id/demo_2_image"
            android:src="@drawable/demo_2_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
            android:id="@+id/demo_2_header"
            android:ellipsize="marquee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Metamorphosis"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@color/overlay_dark"
            app:tl_placeholder="true"
            app:layout_constraintBottom_toBottomOf="@id/demo_2_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_large"
            android:paddingEnd="0dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cl_animate="false"
            app:cl_animatedContainer="true"
            app:layout_constraintTop_toBottomOf="@id/demo_2_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <!-- <View
            android:id="@+id/demo_2_details_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/logo_img"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@id/demo_2_image"
            app:layout_constraintStart_toStartOf="parent"/>-->
        <TextView
                android:id="@+id/demo_2_details_header"
                android:ellipsize="marquee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:text="Metamorphosis"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:ellipsize="marquee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="26sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:text="$4.55"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="@dimen/margin_large"
                app:layout_constraintTop_toTopOf="@id/demo_2_details_header"
                app:layout_constraintBottom_toBottomOf="@id/demo_2_details_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.71"/>


        <TextView
                android:id="@+id/demo_2_text_details"
                android:ellipsize="marquee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:lineSpacingMultiplier="1.1"
                android:text="Calm your mind with this collection of serene arctic landscapes from all around the world."
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@id/demo_2_details_header"
                app:layout_constraintStart_toStartOf="@id/demo_2_details_header"
                app:layout_constraintVertical_bias="0.61"/>

        <View
                android:id="@+id/demo_2_details_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="14dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/demo_2_text_details"/>

        <TextView
                android:id="@+id/demo_2_details_tags_label"
                android:ellipsize="marquee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:text="Select type"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/demo_2_details_divider"/>

        <LinearLayout
                android:id="@+id/demo_2_details_tags"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/demo_2_details_tags_label">

            <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                    android:text="SD"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:backgroundTint="@color/light_gray"
                    app:tl_radius="16dp"/>

            <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                    android:text="HD"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:backgroundTint="@color/light_gray"
                    app:tl_radius="16dp"/>

            <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                    android:text="UHD"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:backgroundTint="@color/light_gray"
                    app:tl_radius="16dp"/>

            <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                    android:text="4K"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:backgroundTint="@color/light_gray"
                    app:tl_radius="16dp"/>

            <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                    android:text="8K"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:backgroundTint="@color/light_gray"
                    app:tl_radius="16dp"/>
        </LinearLayout>

        <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                android:id="@+id/demo_2_details_add"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Add to cart"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="40dp"
                android:elevation="1dp"
                android:translationZ="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/demo_2_details_tags"
                app:layout_constraintBottom_toTopOf="@id/demo_2_details_related"
                app:tl_radius="6dp"/>

        <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                android:id="@+id/demo_2_details_related"
                android:ellipsize="marquee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:text="Related Items"
                android:paddingBottom="8dp"
                android:layout_marginTop="@dimen/margin_XXL"
                app:layout_constraintTop_toBottomOf="@id/demo_2_details_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

    </com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout>

    <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout
            android:tag="demo2actions"
            android:id="@+id/demo_2_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:backgroundTint="@color/white"
            app:cl_placeholder="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/demo_2_image">
        <View
                android:id="@+id/demo_2_favorite"
                android:layout_weight="1"
                android:backgroundTint="@color/icon_light"
                android:background="@drawable/ic_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <View
                android:id="@+id/demo_2_book"
                android:layout_weight="1.4"
                android:backgroundTint="@color/icon_light"
                android:background="@drawable/ic_bookmark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/demo_2_share"
                android:layout_weight="1"
                android:backgroundTint="@color/icon_light"
                android:background="@drawable/ic_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            android:clipToPadding="true"
            android:tag="toolbar"
            android:background="@color/overlay_light"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:menu="@menu/menu_demo_2_details"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout>