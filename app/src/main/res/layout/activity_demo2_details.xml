<?xml version="1.0" encoding="utf-8"?>
<com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:translationZ="6dp"
        app:cl_shapeType="RECTANGULAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7">

    <ImageView
            android:tag="demo2Image"
            android:id="@+id/demo_2_image"
            android:src="@drawable/demo_2_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

   <!-- <View
            android:id="@+id/demo_2_details_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/logo_img"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@id/demo_2_image"
            app:layout_constraintStart_toStartOf="parent"/>-->
    <TextView
            android:id="@+id/demo_2_details_header"
            android:ellipsize="marquee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="36sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:text="Metamorphosis"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@id/demo_2_image"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:ellipsize="marquee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:text="$4.55"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="@dimen/margin_large"
            app:layout_constraintTop_toTopOf="@id/demo_2_details_header"
            app:layout_constraintBottom_toBottomOf="@id/demo_2_details_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.71"/>


    <TextView
            android:id="@+id/demo_2_text_details"
            android:ellipsize="marquee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light"
            android:textStyle="normal"
            android:textSize="16sp"
            android:letterSpacing="0.4"
            android:textAlignment="textStart"
            android:text="Calm your mind with this collection of serene arctic landscapes from all around the world."
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@id/demo_2_details_header"
            app:layout_constraintStart_toStartOf="@id/demo_2_details_header" app:layout_constraintVertical_bias="0.61"/>

    <View
            android:id="@+id/demo_2_details_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/demo_2_text_details"/>

    <TextView
            android:id="@+id/demo_2_details_tags_label"
            android:ellipsize="marquee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:text="Select type"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/demo_2_details_divider"/>

    <LinearLayout
            android:id="@+id/demo_2_details_tags"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/demo_2_details_tags_label">

        <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                android:text="SD"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:backgroundTint="@color/light_gray"
                app:tl_radius="16dp"/>

        <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                android:text="HD"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:backgroundTint="@color/light_gray"
                app:tl_radius="16dp"/>

        <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                android:text="UHD"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:backgroundTint="@color/light_gray"
                app:tl_radius="16dp"/>

        <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
                android:text="4K"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:backgroundTint="@color/light_gray"
                app:tl_radius="16dp"/>
    </LinearLayout>
    
    <com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.TextLayout
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Add to cart"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:elevation="1dp"
            android:translationZ="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/demo_2_details_tags"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tl_radius="6dp"
    />

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            android:clipToPadding="true"
            android:background="@color/overlay_light"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:menu="@menu/menu_demo_2_details"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout>