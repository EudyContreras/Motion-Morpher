        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:elevation="10dp"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mw_shapeType="RECTANGULAR"
        app:mw_startLayout="@id/fabLayout"
        app:mw_endLayout="@id/detailsLayout">

    <include
            android:id="@+id/detailsLayout"
            layout="@layout/activity_demo2_details_content"/>

    <include
            android:id="@+id/cardLayout"
            layout="@layout/activity_demo2_card"/>

</com.eudycontreras.motionmorpherlibrary.layouts.MorphWrapperConstraint>