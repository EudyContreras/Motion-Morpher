<?xml version="1.0" encoding="utf-8"?>
<com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/colorPrimary"
        android:outlineProvider="bounds"
        android:clipToPadding="true"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/itemIcon"
            android:background="@drawable/ic_equalizer"
            android:backgroundTint="@color/icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:id="@+id/itemText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="Label"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toEndOf="@id/itemIcon"/>

    <TextView
            android:id="@+id/itemText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Some other text "
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toBottomOf="@id/itemText1"
            app:layout_constraintStart_toEndOf="@id/itemIcon"/>

</com.eudycontreras.motionmorpherlibrary.layouts.morphLayouts.ConstraintLayout>